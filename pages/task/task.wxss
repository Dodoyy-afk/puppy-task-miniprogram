.search_bar {
    position: relative;
    width: 100%;
    display: flex;
    box-sizing: border-box;
    background-color: #ffffff;
    border: 1px solid #e6e6ea;
    border-radius: 5px;
}

.search_icon {
    margin: 2px;
    position: relative;
}

.search_input {
    position: relative;
    margin-top: 3px;
    left: 3px;
    height: 20px;
    width: 80%;
    line-height: 20px;
    font-size: 14px;
}

.badge {
    position: relative;
    margin-left: 5px;
    top: -2px;
}

.task_list_cell {
    padding: 20px 15px;
    margin: 2px;
    border-radius: 10px;
    background: #f8f7f4;
    border: rgba(0, 0, 0, 0.05) solid 3px;
}



.card {
    display: flex;
    align-items: center;
    padding: 2px;
    position: relative;
}

.task_info {
    width: auto;
    display: flex;
    flex-direction: column;
}

.task_title {
    font-size: 25px;
    font-weight: bolder;
    color: #5b3a29;
}

.task_credit {
    font-size: 15px;
    color: #7a5c4d;
}

.task_date {
    font-size: 12px;
    color: #7a5c4d;
}

.task_publisher {
    position: absolute;
    width: 70px;
    height: 100%;
    right: 8%;
}

.task_publisher_profile {
    position: absolute;
    width: 130%;
}