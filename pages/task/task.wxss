.search_bar {
    position: relative;
    width: 100%;
    display: flex;
    box-sizing: border-box;
    background-color: #ffffff;
    border: 1px solid #e6e6ea;
    border-radius: 5px;
}

.search_icon {
    margin: 2px;
    position: relative;
}

.search_input {
    position: relative;
    margin-top: 3px;
    left: 3px;
    height: 20px;
    width: 80%;
    line-height: 20px;
    font-size: 14px;
}

.badge {
    position: relative;
    margin-left: 5px;
    top: -2px;
}