var string_omitter = function (content, limit) {
    return content.length > limit ? content.substring(0, limit) + "..." : content
}

var string_filter = function (content, limit) {
    return content.length > limit ? content.substring(0, limit) : content
}

var substring_filter = function (content, start, end) {
    return content.substring(start, end)
}

module.exports = {
    omit: string_omitter,
    filter: string_filter,
    substring: substring_filter
}